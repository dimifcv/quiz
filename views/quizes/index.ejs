<table>
   <% var i; for (i = 0; i < quizes.length; i++) { %>
      <tr>
         <td>
            <a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
         </td>
         <td>
            <a href="quizes/<%= quizes[i].id %>" style="text-decoration:none">&nbsp&nbsp(<%= quizes[i].tematica %>)</a>
         </td>
         <td>
            &nbsp&nbsp<a href="quizes/<%= quizes[i].id %>/edit"><button>Editar</button></a>
         </td>
         <td>
            <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete" >
               <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>')">Borrar</button>
            </form>
         </td>
      </tr>
   <% } %>
</table>
<br />
<a href="/quizes/new"><button type="button">Crear Nueva Pregunta</button></a>   

