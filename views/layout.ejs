 * Programa....: /quiz/views/layout.ejs
 * Descripción.: Muestra la estructura de la página del proyecto: Quiz
 *               Describe las 3 secciones: header, body y footer.
 *               Describe el diseño responsive para 3 tipos de pantalla.
 * *************************************************************************** *
-->
<!DOCTYPE html
<html lang="es">
<head>
   <meta charset="UTF-8">
   <title> Quiz </title>
   <link rel="stylesheet" 
         type="text/css"
         href="/stylesheets/style.css" />

   <link rel="stylesheet" 
         type="text/css"
         media="only screen and (min-width: 530px) and (min-device-width: 481px)"
         href="/stylesheets/wide.css" />

   <link rel="stylesheet" 
         type="text/css"
         media="only screen and (max-width: 480px)"
         href="/stylesheets/smartphone.css" />
</head>

<body>
<div id="page-wrap">

   <header class="main" id="h1">
      <% if (!session.user) { %>
         <span class="right" style="float:right"><a href="/login">Login</a></span>
      <% } else { %>
         <span class="right" style="float:right">
            <%= session.user.username %> <a href="/logout">Logout</a>
         </span> 
      <% } %>
      <h2>Quiz<span>: El juego de las preguntas</span></h2>
   </header>

   <nav class="main" id="n1" role="navegation">
      <span><a href="/">Inicio</a></span>
      <span><a href="/quizes/busqueda">Preguntas</a></span>
      <span><a href="/quizes/statistics">Estadísticas</a></span>
      <span><a href="/author">Creditos</a></span>
   </nav>
   
   <section class="main" id="s1">
      <% if (errors.length) { %>
         <span id="ErrorMsgs">
            Corregir errores:<br />
            <% for (var i in errors) { %>
               <span> <%= errors[i].message %> </span>
               <br />
            <% } %>
         </span>
      <% } %>
      
      <div>
         <%- body %>
      </div>
   </section>
   
   <footer class="main" id="f1">
      <a href="https://es.wikipedia.org/wiki/Quiz">¿Qué es un Quiz?</a>
      <br />
      <a href="https://github.com/dimifcv/quiz">Proyecto en Github.</a>
   </footer>
   
</div>
</body>
</html>

<!--  Fin de:  /quiz/views/layout.ejs  -->

